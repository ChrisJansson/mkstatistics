@model IEnumerable<MarioKartStatistics.Controllers.HeatModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Title!!</title>

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/bootstrap.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", routeValues: null, htmlAttributes: new { @class = "navbar-brand" })
            </div>
        </div>
    </nav>
    <div class="container">
        <h1>Latest results</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="col-md-1"><h3>Date</h3></td>
                    <td class="col-md-1"><h3>Winner</h3></td>
                    <td class="col-md-1"><h3>Points</h3></td>
                </tr>
            </thead>
            @foreach (var heat in Model)
            {
                var winner = heat.Scores.First();
                <tr>
                    <td class="col-md-1">@heat.Date</td>
                    <td class="col-md-1">@winner.PlayerName</td>
                    <td class="col-md-1">@winner.Score</td>
                </tr>
            }
        </table>
        <h1>NEW</h1>
        @using (Html.BeginForm("AddResult", "Home", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
        {
            <table class="col-md-4">
                <thead>
                    <tr>
                        <td class="col-md-2">Player</td>
                        <td class="col-md-1">Points</td>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < 4; i++)
                    {
                        <tr>
                            <td class="col-md-2">
                                <div class="form-group">
                                    <select class="form-control">
                                        <option value="0">A</option>
                                        <option value="1">B</option>
                                    </select>
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div class="form-group">
                                    <input type="number" class="form-control" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/bootstrap.js"></script>
</body>
</html>